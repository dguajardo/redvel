    <%= f.text_field :original_title %>
  </div>
  <div class="form-group">
    <%= f.label :translation %><br>
    <%= f.text_field :translation %>
  </div>
  <div class="form-group">
    <%= f.label :edition %><br>
    <%= f.number_field :edition %>
